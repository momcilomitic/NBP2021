@page
@model Neo4JTest.Pages.GuideModel
@{
    ViewData["Title"] = "Guide page";
}


<h1>@Model.Guide.naziv</h1>

<strong>
    Duzina trase - @Model.Guide.duzinaTrase km
    Ukupni uspon - @Model.Guide.visinskaRazlika m
    Kondiciona tezina - @Model.Guide.kondTezina/10
    Tehnicka tezina - @Model.Guide.tehTezina/10
</strong>

<div>
    @Model.Guide.opis
</div>

<div class="d-block">
    <div class="justify-content-center w-50">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @{int i = 0;}
                @foreach (Neo4JTest.Model.Image item in Model.Guide.images)
                {
                    if (i == 0)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                    }
                    i++;
                }
            </ol>
            <div class="carousel-inner">
                @{i = 0;}
                @foreach (Neo4JTest.Model.Image item in Model.Guide.images)
                {
                    @if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/@item.uniqueName" alt="Image">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/@item.uniqueName" alt="Image">
                        </div>
                    }
                    i++;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>